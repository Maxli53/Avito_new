{
  "permissions": {
    "allow": [
      "Bash(git push:*)",
      "Bash(git init:*)",
      "Bash(git remote add:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(mkdir:*)",
      "Bash(dir:*)",
      "Bash(if [ -f 'pyproject.toml' ])",
      "Bash(then echo '✅ Poetry: COMPLIANT (pyproject.toml present)')",
      "Bash(else echo '❌ Poetry: FAILED (pyproject.toml missing)')",
      "Bash(fi)",
      "Bash(if [ -f 'requirements.txt' ])",
      "Bash(if [ -f 'Makefile' ])",
      "Bash(then echo '✅ Makefile: COMPLIANT (with validate-all command)')",
      "Bash(else echo '❌ Makefile: FAILED (missing or incomplete)')",
      "Bash(if [ -f '.pre-commit-config.yaml' ])",
      "Bash(then echo '✅ Pre-commit: COMPLIANT (quality automation configured)')",
      "Bash(else echo '❌ Pre-commit: FAILED (missing automation)')",
      "Bash(make:*)",
      "Bash(poetry install:*)",
      "Bash(pip install:*)",
      "Bash(poetry run:*)"
    ],
    "deny": [],
    "ask": []
  }
}