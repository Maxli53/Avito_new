# Snowmobile Reconciliation System - Production Environment Configuration

# Claude AI API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.4
CLAUDE_REQUEST_TIMEOUT_SECONDS=300

# Database Configuration - PostgreSQL Production
DATABASE_URL=postgresql://snowmobile_user:snowmobile_pass@localhost:5432/snowmobile_reconciliation
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# PDF Processing Paths - Real Data Directory
DATA_DIRECTORY=data
PRICE_LIST_PDF_PATH=data/SKI-DOO_2026-PRICE_LIST.pdf
SPEC_BOOK_PDF_PATH=data/SKIDOO_2026 PRODUCT SPEC BOOK 1-35.pdf

# Application Configuration
ENVIRONMENT=production
DEBUG_MODE=false
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
API_KEY_ENABLED=true
API_KEYS=["prod-key-12345", "test-key-67890"]
CORS_ORIGINS=["http://localhost:3000", "https://snowmobile-recon.com"]
CORS_ALLOW_CREDENTIALS=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true
LOG_LEVEL=INFO

# Pipeline Configuration
PIPELINE_AUTO_ACCEPT_THRESHOLD=0.95
PIPELINE_MANUAL_REVIEW_THRESHOLD=0.75
PIPELINE_ENABLE_SPRING_OPTIONS=true
PIPELINE_ENABLE_CLAUDE_FALLBACK=true
PIPELINE_MAX_CONCURRENT_PROCESSING=10
PIPELINE_MAX_BATCH_SIZE=100

# PDF Processing Configuration
PDF_MAX_FILE_SIZE_MB=50
PDF_SUPPORTED_FORMATS=["pdf"]
PDF_OCR_FALLBACK_ENABLED=true

# Cost Control Configuration
CLAUDE_DAILY_COST_LIMIT_USD=100.00
