# Avito Pipeline Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///snowmobile_reconciliation.db

# =============================================================================
# API KEYS
# =============================================================================
# Claude API (primary LLM provider)
CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key-here

# OpenAI API (fallback LLM provider)
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# FTP UPLOAD CONFIGURATION
# =============================================================================
AVITO_FTP_PASSWORD=your_ftp_password_here
AVITO_FTP_HOST=176.126.165.67
AVITO_FTP_USERNAME=user133859

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
PIPELINE_ENV=development
DEBUG=false
WORKER_COUNT=1
BATCH_SIZE=50

# =============================================================================
# EXTRACTION CONFIGURATION
# =============================================================================
EXTRACTION_PDF_PROCESSOR=pymupdf
EXTRACTION_LLM_PROVIDER=claude
EXTRACTION_MAX_PAGES=100

# =============================================================================
# MATCHING CONFIGURATION
# =============================================================================
BERT_MODEL=all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================
VALIDATION_STRICT_MODE=true
PRICE_MIN=100000
PRICE_MAX=10000000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true